<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".MainActivity">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/surface"
        android:elevation="4dp"
        app:title="My Music"
        app:titleTextColor="@color/on_background"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/sort_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical"
        android:background="@color/surface"
        android:elevation="2dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar">

        <Button
            android:id="@+id/btn_sort_name"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Name"
            android:textAllCaps="false"
            android:textSize="13sp"
            android:textStyle="bold"
            android:textColor="@color/on_background" />

        <Button
            android:id="@+id/btn_sort_date"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Recent"
            android:textAllCaps="false"
            android:textSize="13sp"
            android:textStyle="bold"
            android:textColor="@color/on_background" />

        <Button
            android:id="@+id/btn_sort_duration"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Duration"
            android:textAllCaps="false"
            android:textSize="13sp"
            android:textStyle="bold"
            android:textColor="@color/on_background" />

        <ImageButton
            android:id="@+id/btn_shuffle_main"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Shuffle Play"
            android:src="@drawable/ic_shuffle"
            app:tint="@color/primary" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        app:layout_constraintBottom_toTopOf="@id/player_control_container"
        app:layout_constraintTop_toBottomOf="@id/sort_bar" />

    <FrameLayout
        android:id="@+id/player_control_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/surface"
        android:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.media3.ui.PlayerControlView
            android:id="@+id/player_control_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            app:show_timeout="0"
            app:show_next_button="true"
            app:show_previous_button="true"
            app:show_shuffle_button="true" />
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>