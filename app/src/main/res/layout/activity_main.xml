<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".MainActivity">

    <!-- Main Content -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/surface"
            android:elevation="4dp"
            app:title="My Music"
            app:titleTextColor="@color/on_background"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/sort_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:gravity="center_vertical"
            android:background="@color/surface"
            android:elevation="2dp"
            app:layout_constraintTop_toBottomOf="@id/toolbar">

            <Button
                android:id="@+id/btn_sort"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Sort: Name â†‘"
                android:textAllCaps="false"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/on_background"
                android:gravity="start|center_vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                tools:ignore="RtlSymmetry" />

            <ImageButton
                android:id="@+id/btn_shuffle_main"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Shuffle Play"
                android:src="@drawable/ic_shuffle"
                app:tint="@color/primary" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:clipToPadding="false"
            android:paddingTop="8dp"
            android:paddingBottom="80dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/sort_bar" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Mini Player (always visible at bottom) -->
    <FrameLayout
        android:id="@+id/mini_player_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:elevation="8dp"
        android:visibility="gone">

        <include layout="@layout/view_mini_player" />
    </FrameLayout>

    <!-- Player Control View with Now Playing Info -->
    <androidx.media3.ui.PlayerControlView
        android:id="@+id/player_control_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:padding="8dp"
        android:visibility="gone"
        android:elevation="10dp"
        android:clickable="true"
        android:focusable="true"
        android:background="@color/surface"
        app:controller_layout_id="@layout/custom_player_control" />

    <!-- Now Playing Screen (Bottom Sheet) -->
    <include
        android:id="@+id/now_playing_container"
        layout="@layout/view_now_playing"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        app:behavior_hideable="true"
        app:behavior_peekHeight="0dp"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>