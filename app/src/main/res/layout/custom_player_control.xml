<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/surface"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    android:paddingStart="20dp"
    android:paddingEnd="20dp">

    <!-- Now Playing Info (Optional - can be added later) -->
    <TextView
        android:id="@+id/now_playing_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Now Playing"
        android:textColor="@color/on_surface"
        android:textSize="11sp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Progress Bar -->
    <androidx.media3.ui.DefaultTimeBar
        android:id="@id/exo_progress"
        android:layout_width="0dp"
        android:layout_height="26dp"
        android:layout_marginTop="8dp"
        app:played_color="@color/primary"
        app:scrubber_color="@color/primary"
        app:unplayed_color="@color/on_surface"
        app:bar_height="3dp"
        app:touch_target_height="26dp"
        app:scrubber_enabled_size="12dp"
        app:scrubber_disabled_size="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Time Display Container -->
    <LinearLayout
        android:id="@+id/time_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/exo_progress"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@id/exo_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/on_background"
            android:textSize="12sp"
            android:text="0:00" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/on_surface"
            android:textSize="12sp"
            android:text="â€¢" />

        <TextView
            android:id="@id/exo_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/on_background"
            android:textSize="12sp"
            android:text="0:00" />
    </LinearLayout>

    <!-- Playback Controls -->
    <LinearLayout
        android:id="@+id/playback_controls"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/time_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Shuffle Button -->
        <ImageButton
            android:id="@id/exo_shuffle"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/shuffle"
            android:padding="12dp"
            android:src="@drawable/ic_shuffle"
            app:tint="@color/on_surface" />

        <!-- Previous Button -->
        <ImageButton
            android:id="@id/exo_prev"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginEnd="4dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/previous"
            android:padding="14dp"
            android:src="@drawable/ic_skip_previous"
            app:tint="@color/on_background" />

        <!-- Play/Pause Button -->
        <ImageButton
            android:id="@id/exo_play_pause"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:background="@drawable/play_pause_button_background"
            android:contentDescription="@string/play_pause"
            android:padding="18dp"
            android:src="@drawable/ic_play"
            app:tint="@color/white" />

        <!-- Next Button -->
        <ImageButton
            android:id="@id/exo_next"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginStart="4dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/next"
            android:padding="14dp"
            android:src="@drawable/ic_skip_next"
            app:tint="@color/on_background" />

        <!-- Repeat Button - Hidden by default, can be shown programmatically if needed -->
        <ImageButton
            android:id="@id/exo_repeat_toggle"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/repeat"
            android:padding="12dp"
            android:src="@drawable/ic_repeat"
            android:visibility="gone"
            app:tint="@color/on_surface" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
