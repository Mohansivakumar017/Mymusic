<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/now_playing_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:clickable="true"
    android:focusable="true">

    <!-- Collapse Button -->
    <ImageButton
        android:id="@+id/btn_collapse"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="@string/collapse"
        android:src="@drawable/ic_skip_previous"
        android:rotation="90"
        app:tint="@color/on_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Album Art (Large) -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/album_art_card"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="80dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_collapse"
        app:layout_constraintWidth_max="400dp">

        <ImageView
            android:id="@+id/full_album_art"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:contentDescription="@string/album_art"
            android:src="@drawable/ic_music_note" />
    </com.google.android.material.card.MaterialCardView>

    <!-- Song Info Container -->
    <LinearLayout
        android:id="@+id/full_song_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/album_art_card">

        <TextView
            android:id="@+id/full_song_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/on_background"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:maxLines="2"
            android:ellipsize="end"
            tools:text="Song Title" />

        <TextView
            android:id="@+id/full_song_artist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/on_surface"
            android:textSize="18sp"
            android:gravity="center"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginTop="8dp"
            tools:text="Artist Name" />

        <TextView
            android:id="@+id/full_song_album"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/on_surface"
            android:textSize="16sp"
            android:gravity="center"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginTop="4dp"
            tools:text="Album Name" />
    </LinearLayout>

    <!-- Progress Bar -->
    <androidx.media3.ui.DefaultTimeBar
        android:id="@+id/full_progress_bar"
        android:layout_width="0dp"
        android:layout_height="26dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="24dp"
        app:played_color="@color/primary"
        app:scrubber_color="@color/primary"
        app:unplayed_color="@color/on_surface"
        app:bar_height="4dp"
        app:touch_target_height="26dp"
        app:scrubber_enabled_size="14dp"
        app:scrubber_disabled_size="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/full_song_info" />

    <!-- Time Display -->
    <TextView
        android:id="@+id/full_current_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="4dp"
        android:textColor="@color/on_surface"
        android:textSize="12sp"
        tools:text="0:00"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/full_progress_bar" />

    <TextView
        android:id="@+id/full_total_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="4dp"
        android:textColor="@color/on_surface"
        android:textSize="12sp"
        tools:text="3:45"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/full_progress_bar" />

    <!-- Playback Controls -->
    <LinearLayout
        android:id="@+id/full_playback_controls"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="40dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/full_current_time"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Favorite Button -->
        <ImageButton
            android:id="@+id/full_favorite"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/favorite"
            android:padding="10dp"
            android:src="@drawable/ic_favorite_border"
            app:tint="@color/on_surface" />

        <!-- Shuffle Button -->
        <ImageButton
            android:id="@+id/full_shuffle"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginEnd="16dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/shuffle"
            android:padding="14dp"
            android:src="@drawable/ic_shuffle"
            app:tint="@color/on_surface" />

        <!-- Previous Button -->
        <ImageButton
            android:id="@+id/full_previous"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginEnd="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/previous"
            android:padding="16dp"
            android:src="@drawable/ic_skip_previous"
            app:tint="@color/on_background" />

        <!-- Play/Pause Button -->
        <ImageButton
            android:id="@+id/full_play_pause"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/play_pause_button_background"
            android:contentDescription="@string/play_pause"
            android:padding="20dp"
            android:src="@drawable/ic_play"
            app:tint="@color/white" />

        <!-- Next Button -->
        <ImageButton
            android:id="@+id/full_next"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginStart="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/next"
            android:padding="16dp"
            android:src="@drawable/ic_skip_next"
            app:tint="@color/on_background" />

        <!-- Repeat Button -->
        <ImageButton
            android:id="@+id/full_repeat"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginStart="16dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/repeat"
            android:padding="14dp"
            android:src="@drawable/ic_repeat"
            app:tint="@color/on_surface" />

        <!-- Sleep Timer Button -->
        <ImageButton
            android:id="@+id/full_sleep_timer"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/sleep_timer"
            android:padding="10dp"
            android:src="@drawable/ic_sleep_timer"
            app:tint="@color/on_surface" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
